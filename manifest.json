{
  "manifest_version": 3,
  "name": "Script Runner",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "static/images/icon16.png",
      "128": "static/images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "static/images/icon16.png",
    "128": "static/images/icon128.png"
  },
  "options_page": "options.html"
}
